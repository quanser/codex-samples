    <Snippet>
      <Declarations>
        <Literal>
          <ID>code_content1</ID>
          <ToolTip>Replace with a single line of code.</ToolTip>
          <Default>Enter a line of code.</Default>
        </Literal>
        <Literal>
          <ID>code_content2</ID>
          <ToolTip>Replace with a single line of code.</ToolTip>
          <Default>Enter a line of code.</Default>
        </Literal>
        <Literal>
          <ID>code_content3</ID>
          <ToolTip>Replace with a single line of code.</ToolTip>
